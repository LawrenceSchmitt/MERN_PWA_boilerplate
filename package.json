{
  "name": "mern_boilerplate",
  "version": "0.0.1",
  "description": "MERN boilerplate with Webpack",
  "main": "server/index.js",
  "scripts": {
    "install:client": "npm i --prefix app",
    "build:client": "npm run build --prefix app",
    "dev:client": "npm run dev --prefix app",
    "install:server": "npm install --prefix server",
    "dev:server": "npm run dev --prefix server",
    "build:server": "npm run build --prefix server",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server.bundle.js",
    "dev": "npm run dev:client & npm run dev:server",
    "git": "git add . && git commit -m 'daily changes' && git push origin master",
    "heroku": "npm run build && cd dist && git add . && git commit -am 'changed' && git push heroku master"
  },
  "keywords": [
    "boilerplate",
    "starter",
    "MongoDB",
    "Express",
    "React",
    "Nodejs"
  ],
  "author": "Vindao (Vincent Schmitt)",
  "license": "ISC",
  "devDependencies": {
    "source-map-loader": "^0.2.4",
    "ts-loader": "^5.3.3",
    "typescript": "^3.4.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  }
}
